<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".MainActivity">

<TextView
    android:layout_margin="12dp"
    android:id="@+id/firstTextViewId"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_marginTop="20dp"
    android:background="@color/teal_200"
    android:textSize="25dp"
    android:gravity="right"/>

    <TextView
        android:id="@+id/secondTextViewId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@color/purple_200"
        android:gravity="right"
        android:text="0"
        android:textSize="38dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_margin="7dp"
            android:id="@+id/CEButtonId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="30sp"/>

        <Button
            android:layout_margin="7dp"
            android:id="@+id/CButtonId"
            android:layout_width="0dp"
            android:onClick="clearFunction"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:textSize="30sp"/>

        <Button
            android:layout_margin="7dp"
            android:id="@+id/percentButtonId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="%"
            android:textSize="30sp"/>

        <Button
            android:layout_margin="7dp"
            android:id="@+id/deleteButtonId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="D"
            android:textSize="30sp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal">

            <Button
                android:layout_margin="7dp"
                android:id="@+id/sevenButtonId"
                android:onClick="digitFunction"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="30sp"/>

            <Button
                android:layout_margin="7dp"
                android:id="@+id/eightButtonId"
                android:layout_width="0dp"
                android:onClick="digitFunction"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="30sp"/>

            <Button
                android:layout_margin="7dp"
                android:id="@+id/nineButtonId"
                android:onClick="digitFunction"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="30sp"/>

            <Button
                android:layout_margin="7dp"
                android:id="@+id/divButtonId"
                android:onClick="logicFunction"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="/"
                android:textSize="30sp"/>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_margin="7dp"
            android:id="@+id/fourButtonId"
            android:onClick="digitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30sp"/>

        <Button
            android:layout_margin="7dp"
            android:id="@+id/fiveButtonId"
            android:layout_width="0dp"
            android:onClick="digitFunction"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30sp"/>

        <Button
            android:layout_margin="7dp"
            android:id="@+id/sixButtonId"
            android:onClick="digitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="30sp"/>

        <Button
            android:layout_margin="7dp"
            android:id="@+id/mulButtonId"
            android:onClick="logicFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:textSize="30sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_margin="7dp"
            android:id="@+id/oneButtonId"
            android:onClick="digitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30sp"/>

        <Button
            android:layout_margin="7dp"
            android:id="@+id/twoButtonId"
            android:layout_width="0dp"
            android:onClick="digitFunction"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="30sp"/>

        <Button
            android:layout_margin="7dp"
            android:id="@+id/threeButtonId"
            android:onClick="digitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30sp"/>

        <Button
            android:layout_margin="7dp"
            android:id="@+id/subButtonId"
            android:onClick="logicFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_margin="7dp"
            android:id="@+id/zeroButtonId"
            android:onClick="digitFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30sp"/>

        <Button
            android:layout_margin="7dp"
            android:id="@+id/pointButtonId"
            android:layout_width="0dp"
            android:onClick="digitFunction"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="30sp"/>

        <Button
            android:layout_margin="7dp"
            android:id="@+id/resultButtonId"
            android:onClick="resultButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="30sp"/>

        <Button
            android:layout_margin="7dp"
            android:id="@+id/addButtonId"
            android:onClick="logicFunction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="30sp"/>
    </LinearLayout>


</LinearLayout>